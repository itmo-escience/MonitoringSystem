<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File clusterName="File" fileName="MetricsMonitor.log" bufferedIO="false">
            <PatternLayout pattern="%d{HH:mm:ss} %-8.8p %-20.20c{2} %msg%n"/>
                    <!--<PatternLayout pattern="%d{HH:mm:ss}    %p  [%t]    %msg%n"/>-->
        </File>
        <Console clusterName="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-8.8p %-20.20c{2} %msg%n"/>
            <!--%d %p %c{1.} [%t] %m%n-->
        </Console>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger level="debug" clusterName="console">
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>